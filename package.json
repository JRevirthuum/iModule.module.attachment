{
	"id":"com.moimz.imodule.module.attachment",
	"icon":"fa-floppy-o",
	"title":{
		"ko":"첨부파일관리"
	},
	"version":"3.0.0",
	"description":{
		"ko":"모든 모듈에서 파일을 첨부하거나, 파일첨부와 관련된 전반적인 기능을 관리합니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodule.kr",
	"versionChecker":"http://www.moimz.com/ko/api/moimz/getLatest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":false,
	"global":true,
	"article":false,
	"configs":{
		"templet":{
			"type":"templet",
			"default":"default"
		},
		"file_limit":{
			"type":"int",
			"default":0
		},
		"total_limit":{
			"type":"int",
			"default":0
		},
		"allow_type":{
			"type":"string",
			"default":"*"
		}
	},
	"databases":{
		"attachment_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"module":{
					"type":"varchar",
					"length":20
				},
				"target":{
					"type":"varchar",
					"length":50
				},
				"path":{
					"type":"varchar",
					"length":255
				},
				"name":{
					"type":"varchar",
					"length":255
				},
				"type":{
					"type":"varchar",
					"length":10
				},
				"mime":{
					"type":"varchar",
					"length":100
				},
				"size":{
					"type":"bigint",
					"length":15
				},
				"width":{
					"type":"int",
					"length":5,
					"default":0
				},
				"height":{
					"type":"int",
					"length":5,
					"default":0
				},
				"wysiwyg":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"reg_date":{
					"type":"int",
					"length":11
				},
				"status":{
					"type":"enum",
					"length":"'DRAFT','PUBLISHED','DELETE'",
					"default":"DRAFT"
				},
				"download":{
					"type":"int",
					"length":11,
					"default":0
				},
				"extra":{
					"type":"text",
					"is_null":true
				}
			},
			"indexes":{
				"idx":"primary_key",
				"module":"index",
				"reg_date":"index"
			},
			"auto_increment":"idx"
		}
	}
}