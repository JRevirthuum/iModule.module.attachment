{
	"id":"com.moimz.imodule.module.attachment",
	"icon":"fa-floppy-o",
	"title":{
		"ko":"첨부파일관리"
	},
	"version":"3.0.0",
	"description":{
		"ko":"모든 모듈에서 파일을 첨부하거나, 파일첨부와 관련된 전반적인 기능을 관리합니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodule.kr",
	"versionChecker":"http://www.moimz.com/ko/api/moimz/getLatest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":false,
	"global":true,
	"article":false,
	"configs":{
		"templet":{
			"type":"templet",
			"default":"default"
		},
		"file_limit":{
			"type":"int",
			"default":0
		},
		"total_limit":{
			"type":"int",
			"default":0
		},
		"allow_type":{
			"type":"string",
			"default":"*"
		}
	},
	"databases":{
		"attachment_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"module":{
					"type":"varchar",
					"length":20,
					"comment":"모듈정보"
				},
				"target":{
					"type":"varchar",
					"length":50,
					"comment":"업로드대상정보"
				},
				"path":{
					"type":"varchar",
					"length":255,
					"comment":"업로드경로"
				},
				"name":{
					"type":"varchar",
					"length":255,
					"comment":"파일명"
				},
				"type":{
					"type":"varchar",
					"length":10,
					"comment":"파일형태"
				},
				"mime":{
					"type":"varchar",
					"length":100,
					"comment":"MIME정보"
				},
				"size":{
					"type":"bigint",
					"length":15,
					"comment":"파일크기"
				},
				"width":{
					"type":"int",
					"length":5,
					"default":0,
					"comment":"이미지가로크기"
				},
				"height":{
					"type":"int",
					"length":5,
					"default":0,
					"comment":"이미지세로크기"
				},
				"wysiwyg":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE",
					"comment":"위지윅업로드여부"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"comment":"등록일"
				},
				"status":{
					"type":"enum",
					"length":"'DRAFT','PUBLISHED','DELETE'",
					"default":"DRAFT",
					"comment":"등록상태"
				},
				"download":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"다운로드수"
				},
				"extra":{
					"type":"text",
					"is_null":true,
					"comment":"기타"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"module":"index",
				"reg_date":"index"
			},
			"auto_increment":"idx",
			"comment":"파일첨부관리"
		}
	}
}